# Azure Configuration Variables
# Override these values in terraform.tfvars or via environment variables

# Azure Subscription and Authentication
subscription_id = "your-subscription-id-here"
tenant_id       = "your-tenant-id-here"  # Optional, will be auto-detected if using service principal

# Resource Configuration
location = "SOUTH INDIA"  # Change to your preferred region

# Resource Names (can be customized)
resource_group_name = "microservice-rg"
acr_name           = "microserviceacr"
aks_cluster_name   = "microservice-aks"

# AKS Configuration
node_count = 2
vm_size    = "standard_b16als_v2"